<p id="notice"><%= notice %></p>

<h1>Listing Pay Types</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @pay_types.each do |pay_type| %>
          <tr>
            <td><%= pay_type.name %></td>
            <% if current_user.try(:vip?) or current_user.try(:admin?) %>
                <td><%= link_to 'Edit', edit_pay_type_path(pay_type), :class => "btn btn-xs btn-success" %></td>
                <td><%= link_to 'x', pay_type, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-xs btn-danger" %></td>
            <% end %>

          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>

<%= link_to 'New Pay type', new_pay_type_path, :class => "btn btn-small btn-info" %>
