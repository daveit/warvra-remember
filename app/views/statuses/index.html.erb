<div class="row">
  <div class="col-xs-10 col-sm-6 col-md-8">

    <p id="notice"><%= notice %></p>

    <h1>Listing Status's</h1>

    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th colspan="2"></th>
          </tr>
          </thead>

          <tbody>
          <% @statuses.each do |status| %>
              <tr>
                <td><%= status.name %></td>
                <% if current_user.try(:vip?) or current_user.try(:admin?) %>
                    <td><%= link_to 'Edit', edit_status_path(status), :class => "btn btn-xs btn-success" %></td>
                    <td><%= link_to 'x', status, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-xs btn-danger" %></td>
                <% end %>

              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <br>

    <%= link_to 'New Status', new_status_path, :class => "btn btn-small btn-info" %>
    <br>
  </div>
</div>
