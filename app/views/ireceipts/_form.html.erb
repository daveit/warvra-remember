<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-4">

    <%= simple_form_for(@ireceipt) do |f| %>

        <h3>Individual: <%= (@ireceipt.individual.first + " " + @ireceipt.individual.last) %></h3>

        <div class="form-inputs">
          <%= f.input :rdate, as: :date, label: 'Receipt date', html5: true %>
          <%= f.input :amount %>
          <%= f.input :reference %>
          <%= f.input :details %>
          <%= f.input :financial_to, as: :date, label: 'Financial To', html5: true %>
          <%= f.association :pay_type %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Save Receipt", :class => "btn btn-small btn-success" %>
        </div>
    <% end %>
  </div>
</div>
