<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-12">

    <h1>Listing Individuals Receipts</h1>

    <div class="media">
      <div class="media-body">
        <table class="table table-hover table-condensed">
          <thead>
          <tr>
            <th>Receipt Date</th>
            <th>Amount</th>
            <th>Reference</th>
            <th>Details</th>
            <th>Financial to</th>
            <th>Individual</th>
            <th>Pay type</th>
            <th colspan="2"></th>
          </tr>
          </thead>

          <tbody>
          <% @ireceipts.each do |ireceipt| %>
              <tr>
                <td><%= ireceipt.rdate %></td>
                <td><%= number_to_currency(ireceipt.amount) %></td>
                <td><%= ireceipt.reference %></td>
                <td><%= ireceipt.details %></td>
                <td><%= ireceipt.financial_to %></td>
                <td><%= (ireceipt.individual.first + " " + ireceipt.individual.last) %></td>
                <td><%= ireceipt.pay_type.name %></td>
                <% if current_user.try(:vip?) or current_user.try(:admin?) %>
                  <td><%= link_to 'Edit', edit_ireceipt_path(ireceipt), :class => "btn btn-xs btn-success" %></td>
                  <td><%= link_to 'x', ireceipt, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-xs btn-danger" %></td>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

