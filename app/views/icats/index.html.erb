<p id="notice"><%= notice %></p>

<h1>Listing Individual Categories</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
      <% @icats.each do |icat| %>
          <tr>
            <td><%= icat.name %></td>
            <% if current_user.try(:vip?) or current_user.try(:admin?) %>
                <td><%= link_to 'Edit', edit_icat_path(icat), :class => "btn btn-xs btn-success" %></td>
                <td><%= link_to 'x', icat, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-xs btn-danger" %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Category', new_icat_path, :class => "btn btn-small btn-info" %>
