<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-4">

    <%= simple_form_for(@vreceipt) do |f| %>
        <%= f.error_notification %>
        <h3>Village: <%= (@vreceipt.village.name) %>
        </h3>
        <div class="form-inputs">
          <%= f.input :rdate, as: :date, label: 'Receipt Date', html5: true %>
          <%= f.input :reference %>
          <%= f.input :finto, as: :date, label: 'Financial To', html5: true %>
          <%= f.input :details %>
          <%= f.association :pay_type %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Save Receipt changes', :class => "btn btn-small btn-success" %>
        </div>
    <% end %>
  </div>
</div>
