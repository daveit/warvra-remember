<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-12">


    <h1>Listing Village Receipts</h1>

    <div class="media">
      <div class="media-body">
        <table class="table table-hover table-condensed">
          <thead>
          <tr>
            <th>Receipt Date</th>
            <th>Reference</th>
            <th>Financial to</th>
            <th>Details</th>
            <th>Village</th>
            <th>Pay type</th>
            <th colspan="2"></th>
          </tr>
          </thead>

          <tbody>
          <% @vreceipts.each do |vreceipt| %>
              <tr>
                <td><%= vreceipt.rdate %></td>
                <td><%= vreceipt.reference %></td>
                <td><%= vreceipt.finto %></td>
                <td><%= vreceipt.details %></td>
                <td><%= vreceipt.village.name %></td>
                <td><%= vreceipt.pay_type.name %></td>
                <% if current_user.try(:vip?) or current_user.try(:admin?) %>
                    <td><%= link_to 'Edit', edit_vreceipt_path(vreceipt), :class => "btn btn-xs btn-success"  %></td>
                    <td><%= link_to 'x', vreceipt, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-xs btn-danger" %></td>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
