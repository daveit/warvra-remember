<div class="row">

  <div class="col-xs-2 col-sm-3 col-md-3">
  </div>

  <div class="col-xs-8 col-sm-6 col-md-6">

    <%= simple_form_for(@miscellaneous_contact) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :address, :input_html => {:rows => 4} %>
          <%= f.input :workphone, label: "Work Phone#" %>
          <%= f.input :mobilephone, label: "Mobile Phone#" %>
          <%= f.input :emailaddress, label: "Email Address" %>
          <%= f.association :ContactsCategory, label: "Category" %>
          <%= f.input :notes, :input_html => {:rows => 5} %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
    <% end %>
  </div>
  <div class="col-xs-2 col-sm-3 col-md-3">
  </div>

</div>