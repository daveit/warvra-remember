<div class="row">
  <div class="col-xs-6 col-sm-4 col-md-8">

    <p id="notice"><%= notice %></p>

    <h1>Listing Regions</h1>

    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th colspan="2"></th>
          </tr>
          </thead>

          <tbody>
          <% @regions.each do |region| %>
              <tr>
                <td><%= region.name %></td>
                <% if current_user.try(:vip?) or current_user.try(:admin?) %>
                    <td><%= link_to 'Edit', edit_region_path(region), :class => "btn btn-xs btn-success" %></td>
                    <td><%= link_to 'x', region, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-xs btn-danger" %></td>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= link_to 'New Region', new_region_path, :class => "btn btn-small btn-info" %>
    <hr>
  </div>
</div>