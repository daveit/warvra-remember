<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-12">

    <%= simple_form_for(@individual, html: {class: 'form-horizontal'}) do |f| %>
        <%= f.error_notification %>

        <%=  %>

        <div class="row">
          <div class="form-inputs col-xs-2">
            <%= f.association :title %>
          </div>
          <div class="form-inputs col-xs-4">
            <%= f.input :first %>
          </div>
          <div class="form-inputs col-xs-4">
            <%= f.input :last %>
          </div>
        </div>
        <div class="row">
          <div class="form-inputs col-xs-4">
            <%= f.input :address1 %>
          </div>
          <div class="form-inputs col-xs-4">
            <%= f.input :address2 %>
          </div>
        </div>

        <div class="row">
          <div class="form-inputs col-xs-4">
            <%= f.input :suburb %>
          </div>
          <div class="form-inputs col-xs-2">
            <%= f.input :postcode %>
          </div>
        </div>

        <div class="row">
          <div class="form-inputs col-xs-4">
            <%= f.input :phone %>
          </div>
          <div class="form-inputs col-xs-4">
            <%= f.input :mobile %>
          </div>
        </div>

        <div class="row">
          <div class="form-inputs col-xs-6">
            <%= f.association :ivillage, label: "Village?" %>
          </div>
        </div>

        <div class="row">
          <div class="form-inputs col-xs-6">
            <%= f.input :email %>
          </div>
        </div>

        <div class="row">
          <div class="form-inputs col-xs-6">
            <%= f.input :financial_to, :as => :date_picker, input_html: {:style => 'width: 300px', class: 'glyphicon glyphicon-calendar'} %>
          </div>
        </div>

        <div class="row">
          <div class="form-inputs col-xs-3">
            <%= f.association :status %>
          </div>
        </div>

        <div class="row">
          <div class="form-inputs col-xs-3">
            <%= f.association :region %>
          </div>
        </div>

        <div class="row">
          <div class="form-inputs col-xs-4">
            <%= f.association :icats, as: :check_boxes, label: "Select Categories" %>
          </div>
        </div>

        <div class="row">
          <div class="form-inputs col-xs-6">
            <div class="form-actions">
              <%= submit_tag "Save", :class => "btn btn-small btn-success" %>
            </div>
          </div>
        </div>

    <% end %>

  </div>
</div>
