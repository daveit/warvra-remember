<%= simple_form_for(@ivillage) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :suburb %>
    <%= f.input :postcode %>
    <%= f.input :phone1, label: "Phone" %>
    <%= f.input :phone2, label: "Mobile" %>
    <%= f.input :website %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
