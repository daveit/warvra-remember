<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-12">

    <p id="notice"><%= notice %></p>

    <h1>Villages for Individuals</h1>
    <% if current_user.try(:vip?) or current_user.try(:admin?) %>
        <%= link_to 'New Individuals Village', new_ivillage_path, :class => "btn btn-sm btn-info" %>
    <% end %>

    <div class="media">
      <div class="media-body">
        <table class="table table-hover table-condensed">
          <thead>
          <tr>
            <th>Name</th>
            <th>Address1</th>
            <th>Suburb</th>
            <th>Postcode</th>
            <th>Phone</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @ivillages.each do |ivillage| %>
              <tr>
                <td><%= link_to ivillage.name, edit_ivillage_path(ivillage) %></td>
                <td><%= ivillage.address1 %></td>
                <td><%= ivillage.suburb %></td>
                <td><%= ivillage.postcode %></td>
                <td><%= ivillage.phone1 %></td>
                <% if current_user.try(:vip?) or current_user.try(:admin?) %>
                    <td><%= link_to 'Edit', edit_ivillage_path(ivillage), :class => "btn btn-xs btn-success" %></td>
                    <td><%= link_to 'x', ivillage, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-xs btn-danger" %></td>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <% if current_user.try(:vip?) or current_user.try(:admin?) %>
        <%= link_to 'New Individuals Village', new_ivillage_path, :class => "btn btn-sm btn-info" %>
    <% end %>
    <hr>
  </div>
</div>
