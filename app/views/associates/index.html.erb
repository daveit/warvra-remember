<div class="row">
  <div class="col-xs-10 col-sm-4 col-md-12">

    <p id="notice"><%= notice %></p>

    <% if current_user.try(:vip?) or current_user.try(:admin?) %>
        <%= link_to 'New Associate', new_associate_path, :class => "btn btn-sm btn-success" %>
    <% end %>

    <h2>Associates</h2>

    <div class="media">
      <div class="media-body">
        <table class="table table-hover table-condensed">
          <thead>
          <tr>
            <th>Surname</th>
            <th>First</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Created?</th>
            <th>Management?</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @associates.each do |associate| %>
              <tr>
                <td><%= link_to associate.surname, associate %></td>
                <td><%= associate.first %></td>
                <td><%= associate.email %></td>
                <td><%= associate.phonemobile %></td>
                <td><%= associate.created_at.strftime("%d/%m/%Y") %></td>
                <td><%= associate.management %></td>
                <% if current_user.try(:vip?) or current_user.try(:admin?) %>
                    <td><%= link_to 'Edit', edit_associate_path(associate), :class => "btn btn-xs btn-success" %></td>
                    <% if current_user.try(:admin?) %>
                      <td><%= link_to 'x', associate, method: :delete, data: {confirm: 'Permanently Remove this Associate?'}, :class => "btn btn-xs btn-danger" %></td>
                    <% end %>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>

