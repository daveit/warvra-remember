<%= simple_form_for(@contact) do |f| %>
    <h3>Village: <%= @contact.village.name %>
    </h3>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :phone %>
      <%= f.input :mobile %>
      <%= f.input :email %>
      <%= f.association :title %>
      <%= f.association :position %>
      <%= f.input :admin %>
    </div>
    <% if current_user.try(:vip?) or current_user.try(:admin?) %>
        <div class="form-actions">
          <%= f.button :submit, "Save Contact", :class => "btn btn-small btn-success" %>
        </div>
    <% end %>
<% end %>
